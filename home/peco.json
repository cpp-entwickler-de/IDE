        "C-e": "peco.EndOfLine",
        "C-x,C-g,ESC": "peco.Cancel",
        "C-k": "peco.DeleteAll",
        "M-Tab": "peco.SelectNone",
        "C-Tab": "peco.SelectAll",
        "Tab": "peco.ToggleSelectionAndSelectNext"
    }
