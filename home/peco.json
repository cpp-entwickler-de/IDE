{
    "Prompt":        "Pattern:",
    "InitialFilter": "Fuzzy",
    "OnCancel":      "error",
    "Style": {
        "Basic": ["on_default", "default"],
        "SavedSelection": ["white", "on_blue"],
        "Selected": ["white", "on_blue", "bold"],
        "Query": ["bold"],
        "Matched": ["bold"]
    },
    "Keymap": {
        "M-v": "peco.ScrollPageUp",
        "C-v": "peco.ScrollPageDown",
